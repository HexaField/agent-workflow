{
  "name": "@hexafield/agent-workflow",
  "version": "0.1.0",
  "description": "Agent workflow orchestration utilities for Hyperagent",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./agent": "./dist/agent.js",
    "./agent-orchestrator": "./dist/agent-orchestrator.js",
    "./opencode": "./dist/opencode.js",
    "./provenance": "./dist/provenance.js",
    "./workflow-schema": "./dist/workflow-schema.js",
    "./workflows/*": "./dist/workflows/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx",
    "pretest": "npm run build",
    "test": "vitest run"
  },
  "dependencies": {
    "@hexafield/jsonpath-object-transform": "^2.0.0",
    "@opencode-ai/sdk": "^1.0.152",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.0.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^8.47.0",
    "fast-glob": "^3.3.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rollup": "^4.53.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18"
  }
}
